.row
  %h1.title
    Hassaku's Portfolio

.row
  .social-likes
    .facebook
      Facebook
    .twitter
      Twitter

-data.articles.each do |p|
  %article.row.portfolio
    .eye-catch.small-12.medium-6.columns{id: p.flag}
      -if p.type == "image"
        =image_tag p.src
      -elsif p.type == "youtube"
        .flex-video
          %iframe{ src: "//www.youtube.com/embed/#{p.src}?controls=0&rel=0&showinfo=0", frameborder: "0" }
      .title
        =p.title
    .description.small-12.medium-5.columns.end
      %h3
        =p.title
        =link_to "\##{p.flag}", class: "link-to-content" do
          %i.fa.fa-link
      .date
        =p.date
      %span.tag.label.round
        =p.tag
      %p
        =p.description

.row
  .contact.small-4.small-offset-4.columns.end
    =link_to 'mailto:hassaku.apps@gmail.com' do
      %i.fa.fa-envelope-o
    =link_to "https://github.com/hassaku" do
      %i.fa.fa-github
    =link_to "https://soundcloud.com/hassakumusic" do
      %i.fa.fa-soundcloud
